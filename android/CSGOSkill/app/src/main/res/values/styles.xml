<resources>

    <style name="Theme.Flare" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:colorButtonNormal">@color/primaryDark</item>
        <item name="alertDialogTheme">@style/AlertDialog</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/primary_text_material_dark</item>
        <item name="android:colorForeground">@color/lightGrey</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/primary_text_material_dark</item>
        <item name="android:textColorSecondaryInverse">@color/primary_text_material_dark</item>
        <item name="android:textColorTertiary">@color/primary_text_material_dark</item>
        <item name="android:textColorTertiaryInverse">@color/primary_text_material_dark</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/lightGrey</item>
        <item name="android:background">@color/primaryDark</item>
        <item name="android:windowTitleStyle">@style/Theme.Flare.DialogWindowTitle</item>
    </style>

    <style name="Theme.Flare.Dialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="android:windowTitleStyle">@style/Theme.Flare.DialogWindowTitle</item>
        <item name="android:borderlessButtonStyle">@style/Widget.Flare.Button.Borderless</item>
        <item name="android:buttonBarStyle">@style/Theme.Flare.ButtonBar.AlertDialog</item>

        <item name="android:background">@color/primaryDark</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="Theme.Flare.Dialog.AlertDialog" parent="Theme.Flare.Dialog">
        <item name="android:buttonBarStyle">@style/Theme.Flare.ButtonBar.AlertDialog</item>
        <item name="android:borderlessButtonStyle">@style/Widget.Flare.Button.Borderless</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="Theme.Flare.DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">
            @style/Theme.Flare.DialogWindowTitle.TextAppearance
        </item>
    </style>

    <style name="Theme.Flare.DialogWindowTitle.TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Flare.Button.Borderless" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Theme.Flare.ButtonBar.AlertDialog" parent="android:DeviceDefault.ButtonBar.AlertDialog">
        <item name="android:background">@color/primaryDark</item>
    </style>

    <style name="Theme.Flare.Button" />
    <style name="Theme.Flare.Button.Highlighted">
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <style name="Theme.Flare.TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Flare.TextAppearance.Title" parent="Theme.Flare.TextAppearance">
        <item name="android:textSize">56sp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Flare.TextAppearance.SplashCaption" parent="Theme.Flare.TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Flare.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Flare.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Flare.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
