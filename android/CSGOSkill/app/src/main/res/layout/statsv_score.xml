<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mvpLayout"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintWidth_percent="0.44"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/scoreLayout"
        app:layout_constraintHorizontal_chainStyle="spread_inside">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/mvpNumber"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:autoSizeTextType="uniform"
            android:text="@string/ph_mvps"
            android:gravity="center"
            android:shadowColor="@color/shadowLight"
            android:shadowDx="0.0"
            android:shadowDy="1.2"
            android:shadowRadius="8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/mvpBottomGuide" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/mvpLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            android:text="@string/mvps"
            android:gravity="center"
            android:textAllCaps="true"
            android:shadowColor="@color/shadowLight"
            android:shadowDx="0.0"
            android:shadowDy="1.2"
            android:shadowRadius="5"
            app:layout_constraintBottom_toBottomOf="parent" />
        <android.support.constraint.Guideline
            android:id="@+id/mvpBottomGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/scoreLayout"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintWidth_percent="0.44"
        app:layout_constraintLeft_toRightOf="@id/mvpLayout"
        app:layout_constraintRight_toRightOf="parent">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/scoreNumber"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:autoSizeTextType="uniform"
            android:text="@string/ph_score"
            android:gravity="center"
            android:shadowColor="@color/shadowLight"
            android:shadowDx="0.0"
            android:shadowDy="1.2"
            android:shadowRadius="8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/scoreBottomGuide" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/scoreLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            android:text="@string/score"
            android:gravity="center"
            android:textAllCaps="true"
            android:shadowColor="@color/shadowLight"
            android:shadowDx="0.0"
            android:shadowDy="1.2"
            android:shadowRadius="5"
            app:layout_constraintBottom_toBottomOf="parent" />
        <android.support.constraint.Guideline
            android:id="@+id/scoreBottomGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
