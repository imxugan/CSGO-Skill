<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/roundLayout"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintWidth_percent="0.44"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/matchLayout"
        app:layout_constraintHorizontal_chainStyle="spread_inside">
        <android.support.constraint.Guideline
            android:id="@+id/roundTopGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/roundWins"
            android:layout_width="0dp"
            android:layout_height="20sp"
            app:autoSizeTextType="uniform"
            android:text="43"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:shadowColor="@color/shadowLight"
            android:shadowDx="0.0"
            android:shadowDy="1.2"
            android:shadowRadius="8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/roundSeparator" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/roundSeparator"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            app:autoSizeTextType="uniform"
            android:text="/"
            android:gravity="center"
            android:shadowColor="@color/shadowLight"
            android:shadowDx="0.0"
            android:shadowDy="1.2"
            android:shadowRadius="8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/roundWins"
            app:layout_constraintRight_toLeftOf="@id/roundPlays"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/roundPlays"
            android:layout_width="0dp"
            android:layout_height="20sp"
            app:autoSizeTextType="uniform"
            android:text="77"
            android:gravity="center"
            android:shadowColor="@color/shadowLight"
            android:shadowDx="0.0"
            android:shadowDy="1.2"
            android:shadowRadius="8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/roundSeparator"
            app:layout_constraintRight_toRightOf="parent" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/roundPercent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:autoSizeTextType="uniform"
            android:text="55.8%"
            android:gravity="center"
            android:shadowColor="@color/shadowLight"
            android:shadowDx="0.0"
            android:shadowDy="1.2"
            android:shadowRadius="8"
            app:layout_constraintTop_toTopOf="@id/roundTopGuide"
            app:layout_constraintBottom_toBottomOf="@id/roundBottomGuide" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/roundLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="round wins"
            android:textAllCaps="true"
            android:shadowColor="@color/shadowLight"
            android:shadowDx="0.0"
            android:shadowDy="1.2"
            android:shadowRadius="8"
            app:layout_constraintBottom_toBottomOf="parent" />
        <android.support.constraint.Guideline
            android:id="@+id/roundBottomGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/matchLayout"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintWidth_percent="0.44"
        app:layout_constraintLeft_toRightOf="@id/roundLayout"
        app:layout_constraintRight_toRightOf="parent">
        <android.support.constraint.Guideline
            android:id="@+id/matchTopGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/matchWins"
            android:layout_width="0dp"
            android:layout_height="20sp"
            app:autoSizeTextType="uniform"
            android:text="8"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:shadowColor="@color/shadowLight"
            android:shadowDx="0.0"
            android:shadowDy="1.2"
            android:shadowRadius="8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/matchSeparator" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/matchSeparator"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            app:autoSizeTextType="uniform"
            android:text="/"
            android:gravity="center"
            android:shadowColor="@color/shadowLight"
            android:shadowDx="0.0"
            android:shadowDy="1.2"
            android:shadowRadius="8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/matchWins"
            app:layout_constraintRight_toLeftOf="@id/matchPlays"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/matchPlays"
            android:layout_width="0dp"
            android:layout_height="20sp"
            app:autoSizeTextType="uniform"
            android:text="13"
            android:gravity="center"
            android:shadowColor="@color/shadowLight"
            android:shadowDx="0.0"
            android:shadowDy="1.2"
            android:shadowRadius="8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/matchSeparator"
            app:layout_constraintRight_toRightOf="parent" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/matchPercent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:autoSizeTextType="uniform"
            android:text="61.5%"
            android:gravity="center"
            android:shadowColor="@color/shadowLight"
            android:shadowDx="0.0"
            android:shadowDy="1.2"
            android:shadowRadius="8"
            app:layout_constraintTop_toTopOf="@id/matchTopGuide"
            app:layout_constraintBottom_toBottomOf="@id/matchBottomGuide" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/matchLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="match wins"
            android:textAllCaps="true"
            android:shadowColor="@color/shadowLight"
            android:shadowDx="0.0"
            android:shadowDy="1.2"
            android:shadowRadius="8"
            app:layout_constraintBottom_toBottomOf="parent" />
        <android.support.constraint.Guideline
            android:id="@+id/matchBottomGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
